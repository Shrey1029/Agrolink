<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEBCC"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Consumer Information -->
        <TextView
            android:id="@+id/consumerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumer Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consumerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +91-XXXXXXXXXX"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Order Details -->
        <TextView
            android:id="@+id/cropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Name: Wheat"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: â‚¹1000"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Order Status -->
        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Action Buttons (optional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acceptOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept" />

            <Button
                android:id="@+id/rejectOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
