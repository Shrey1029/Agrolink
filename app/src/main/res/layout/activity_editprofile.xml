<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Picture -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="191dp"
            android:layout_height="208dp"
            android:background="@drawable/edittext_background"
            android:contentDescription="Edit Profile Image"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient_background" />
    </LinearLayout>

    <!-- Edit Farmer Details -->
    <!-- Edit Farmer Name -->
    <EditText
        android:id="@+id/edit_farmer_name"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:hint="Name"
        android:textColor="@color/textPrimary"
        android:textSize="18sp" />

    <!-- Edit Farmer Age -->
    <EditText
        android:id="@+id/edit_farmer_age"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:hint="Age"
        android:textColor="@color/textPrimary"
        android:textSize="18sp" />

    <!-- Edit Farmer Location -->
    <EditText
        android:id="@+id/edit_farmer_location"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:hint="Location"
        android:textColor="@color/textPrimary"
        android:textSize="18sp" />

    <!-- Edit Farmer Experience -->
    <EditText
        android:id="@+id/edit_farmer_experience"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:hint="Experience"
        android:textColor="@color/textPrimary"
        android:textSize="18sp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:padding="16dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>

